<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="kasbah">
  <schema id="org.gnome.Kasbah" path="/org/gnome/Kasbah/">
    <key name="include-pointer" type="b">
      <default>false</default>
      <summary>Include pointer</summary>
      <description>
        Whether the pointer should be included in the screenshot
      </description>
    </key>
    <key name="window-shadow" type="b">
      <default>true</default>
      <summary>Window shadow</summary>
      <description>
        Whether screenshot should include window shadow
      </description>
    </key>
    <key name="delay" type="i">
      <default>0</default>
      <summary>Delay</summary>
      <description>
        How many seconds to wait before capturing screenshot
      </description>
    </key>
    <key name="mode" type="s">
      <default>'Window'</default>
      <summary>Mode</summary>
      <choices>
        <choice value='Screen'/>
        <choice value='Window'/>
        <choice value='Selection'/>
      </choices>
      <description>
        The selected screenshot mode
      </description>
    </key>
  </schema>
</schemalist>
